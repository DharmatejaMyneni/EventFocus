<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eventfocus.MainActivity">


    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/click" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/equip" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/street" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pixels" />

    </ViewFlipper>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/bg_color"
            android:scaleType="center"
            android:src="@drawable/logo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logopic"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/title"
            android:textColor="@color/color1"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logopic"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="145dp"
            android:autoLink="phone"
            android:background="@color/bg_color"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/ic_call_black_24dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/dial"
            android:textColor="@color/color2"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logopic"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="145dp"
            android:autoLink="map"
            android:background="@color/bg_color"
            android:clickable="true"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/ic_location_on_black_24dp"
            android:padding="10dp"
            android:text="@string/place"
            android:textAllCaps="false"
            android:textColor="@color/color3"
            android:textSize="27sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logopic"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="250dp"
            android:background="@color/bg_color"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/ic_access_time_black_24dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/work_hours"
            android:textColor="@color/color4"
            android:textSize="22sp" />

    </LinearLayout>

</RelativeLayout>
